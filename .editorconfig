# if you want to update the rules in this file, you MUST also update them in prettier.config.js
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 2
max_line_length = 160

[*.md]
trim_trailing_whitespace = false

[*.{js, ts, tsx, json}]
indent_size = 4
